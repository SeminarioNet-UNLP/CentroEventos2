@inject IServicioAutorizacion serviAuth
@inherits LayoutComponentBase


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <Button Color="ButtonColor.Dark" Outline="true" Disabled="@disableButton" @onclick="CerrarSesion"> LogOut </Button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code
{
   
    bool disableButton= false;
    Usuario? usActivo = new();
    protected override void OnInitialized()
    {
        usActivo = serviAuth.ObtenerUsuarioActivo();
        disableButton = usActivo== null;
    }
    private void CerrarSesion()
    {
        serviAuth.LogOut();
    }
}