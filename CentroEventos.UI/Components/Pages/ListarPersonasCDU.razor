@page "/listadopersonas"
@rendermode InteractiveServer
@inject ListarPersonasUseCase ListarPersonasUseCase
@inject IServicioAutorizacion autorizacion


<table class= "table">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Telefono</th>
            @if (esAdmin)
            {
              <th>Acciones</th> <!--- Solo se ve si tengo el permiso (soy administrador) --->
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var p in _lista)
        {
            <tr>
                <td>@p.Dni</td>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Email</td>
                <td>@p.Telefono</td>
                @if (esAdmin)
                {
                  <td>  
                      <button class="btn btn-primary">Agregar</button>
                      <button class="btn btn-secundary">Editar</button>
                  </td>
                }
            </tr>
        }
    </tbody>
</table>

@code {
    bool esAdmin=false;
    List<Persona> _lista = new List<Persona>();
    protected override void OnInitialized()
    {
        _lista = ListarPersonasUseCase.Ejecutar();
        var usuarioActual = autorizacion.ObtenerUsuarioActivo();
        bool esAdmin = usuarioActual != null && autorizacion.PoseeElPermiso(usuarioActual, Permiso.Administrador);
    }

}